@using ToolsLib.Utility
@model Instrument.Common.Models.ContactModel
@{
    ViewBag.Title = "联络单编辑";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
<script type="text/javascript">
    function fnClose() {
        window.parent.ymPrompt.close();
    }
</script>
<form id="form"  class="cmxform"  method="post"  action="/Contact/Save" enctype="multipart/form-data">
<table cellpadding="0" cellspacing="0" border="0" class="form_table" width="100%">
    <tr>
        <th width="90px">
            客户名称
        </th>
        <td width="150px">
            @Model.CompanyName
        </td>
            </tr>
    <tr>
        <th width="60px">
            事项分类
        </th>
        <td>
            @ViewBag.CaseType
        </td>
    </tr>
    <tr>
        <th width="90px">
            反馈信息
        </th>
        <td>
            @Model.FeedbackContent
        </td>
            </tr>
    <tr>
        <th width="60px">
            反馈日期
        </th>
        <td>
            @string.Format("{0:yyyy-MM-dd}", Model.FeedbackDate)
        </td>
    </tr>
    <tr>
        <th width="90px">
            沟通事项摘要
        </th>
        <td width="150px">
        @Model.Abstract
        </td>
        </tr>
    <tr>
        <th width="90px">
            沟通问题描述
        </th>
        <td >
        @Model.ContactContent
        </td>
    </tr>
     <tr>
        <th>
            附件
        </th>
        <td>
             @{if (ViewBag.FileId != null)
              {
                <a target='_blank' href="/SysManage/Attachment/DownLoad?fileId=@ViewBag.FileId">@ViewBag.FileName</a>
              } 
            }
        </td>
    </tr>
</table>
<div class="submit_btn_div">
    <input id="btnClose" type="button" class="submit_btn" value="关 闭" onclick="fnClose()" />
</div>
</form>