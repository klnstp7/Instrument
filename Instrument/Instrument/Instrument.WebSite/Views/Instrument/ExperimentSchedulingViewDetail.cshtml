@{
    ViewBag.Title = "设备状态图排期情况";
    Layout = null;
}
<html>
<head>
    <title>设备状态图排期情况</title>
    <style type="text/css">
        #tableEquipment
        {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            border-left: 0px solid #888;
            border-top: 0px solid #888;
        }
        #tableEquipment tr
        {
            line-height: 2;
            text-align: center;
            background: #F0F8FF;
        }
        
        #tableEquipment tr td
        {
            width: 1%;
            height: 35px;
            border: solid 1px;
            font-family: Arial;
        }
        
        #tableEquipment tr th
        {
            border: solid 1px;
            width: 10%;
            font-size: 13px;
        }
        
        .paiqi
        {
            background: #7CFC00;
        }
        
        #EquipmentTableFormTable span
        {
            border-collapse: collapse;
            color: #333;
            font-family: Arial,simsun;
            font-size: 13px;
            text-alignleftwidth: 65px;
        }
        
        .myfont
        {
            font-size: 14px;
            font-family: Arial;
        }
        
        .chongtu
         {
              background: #FF4040;
         }
         
    </style>
    <script src="../../Scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script type="text/javascript">
    $(function () {
        var url = "/Instrument/GetExperimentSchedulingViewDetail?InstrumentId=" + "@Request["InstrumentId"]";
        $.post(url, $("#EquipmentTableForm").serialize(), function (data) {
            $("#tableEquipment").find("tr:gt(1)").remove();
            $("#tableEquipment").append(data.ExperimentPlanTable);
            $("#tableEquipment").find("tr:gt(1)").addClass("myfont");

        })
    });

    //设备排期查询
    function fnExperimentPlan() {
        var url = "/Instrument/GetExperimentSchedulingViewDetail?InstrumentId=" + "@Request["InstrumentId"]";
        $.post(url, $("#EquipmentTableForm").serialize(), function (data) {
            $("#tableEquipment").find("tr:gt(1)").remove();
            $("#tableEquipment").append(data.ExperimentPlanTable);
            $("#tableEquipment").find("tr:gt(1)").addClass("myfont");

        })
        return false;


    }
  

    </script>
</head>
<body>
<table id="EquipmentTableFormTable" >
    <tr>
        
        <td>
            <div style="width: 22px; height: 22px; background: #F0F8FF; margin-left: 10px;">
            </div>
        </td>
        <td>
            空闲
        </td>
        <td>
            <div style="width: 22px; height: 22px; background: #7CFC00; margin-left: 10px;">
            </div>
        </td>
        <td>
            占用
        </td>
        <td>
            <div style="width: 22px; height: 22px; background: #FF4040; margin-left: 10px;">
            </div>
        </td>
        <td>
            冲突
        </td>
    </tr>
</table>
<table id="tableEquipment" cellpadding="0" cellspacing="0">
	<tr style="text-align:center;" >
		<th rowspan="2">设备名称</th>
		<td colspan="24" style=" width:46%; font-size:13px;" >上午(AM)</td>
		<td colspan="24" style=" width:46%;font-size:13px">下午(PM)</td>
	</tr>
	<tr id="TimeList">
		<!--上午-->		
		<td colspan="2">0</td>
		<td colspan="2">1</td>
		<td colspan="2">2</td>
		<td colspan="2">3</td>
		<td colspan="2">4</td>
		<td colspan="2">5</td>
		<td colspan="2">6</td>
		<td colspan="2">7</td>
		<td colspan="2">8</td>
		<td colspan="2">9</td>
		<td colspan="2">10</td>
		<td colspan="2">11</td>
		<!--下午-->		
		<td colspan="2">12</td>
		<td colspan="2">13</td>
		<td colspan="2">14</td>
		<td colspan="2">15</td>
		<td colspan="2">16</td>
		<td colspan="2">17</td>
		<td colspan="2">18</td>
		<td colspan="2">19</td>
		<td colspan="2">20</td>
		<td colspan="2">21</td>
		<td colspan="2">22</td>
		<td colspan="2">23</td>
	</tr>
  </table>
</body>
</html>
