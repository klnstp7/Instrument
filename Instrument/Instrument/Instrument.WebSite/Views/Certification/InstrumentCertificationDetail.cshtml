@using ToolsLib.Utility
@model Instrument.Common.Models.InstrumentCertificationModel
@{
    ViewBag.Title = "周期校准记录详细";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/InstrumentJs.js")" type="text/javascript"></script>
<script type="text/javascript" language="javascript">
</script>
<table id="tableInstrumentCertification" class="form_table">
    <tr>
        <th style="width: 20%;">
            周检状态
        </th>
        <td style="width: 30%;">
           @ViewBag.RecordState
        </td>
        <th style="width: 20%;">
            证书编号
        </th>
        <td style="width: 30%;">
            @Model.CertificationCode
        </td>
    </tr>
        <tr>
        <th>
            费用
        </th>
        <td>
            @string.Format("{0:F2}",Model.CertMoney)
        </td>
        <th>
            误差
        </th>
        <td>
            @Model.ErrorValue
        </td>
    </tr>
    <tr>
        <th id="thCheckDate">
            校准日期
        </th>
        <td>
            @(null == Model.CheckDate ? "" : Model.CheckDate.Value.ToString("yyyy-MM-dd")) </td>
        <th id="thEndDate">
           到期日期
        </th>
        <td>
            @(null == Model.EndDate ? "" : Model.EndDate.Value.ToString("yyyy-MM-dd")) </td>
    </tr>
    <tr>
        <th>
            送检单号
        </th>
        <td>
            @Model.OrderNo
        </td>
        <th id="thMeasureOrg">
            计量机构
        </th>
        <td>
            @Model.MeasureOrg
        </td>
    </tr>
    <tr>
        <th>
            送检日期
        </th>
        <td>
           @(null == Model.SendInstrumentDate ? null : Model.SendInstrumentDate.Value.ToString("yyyy-MM-dd"))
        </td>
        <th>
            <span>返回日期</span>
        </th>
        <td>
               @(null == Model.ReturnInstrumentDate ? null : Model.ReturnInstrumentDate.Value.ToString("yyyy-MM-dd"))
        </td>
    </tr>
    <tr>
        <th>
            <span>证书取回日期</span>
        </th>
        <td>
             @(null == Model.GetCertificateDate ? null : Model.GetCertificateDate.Value.ToString("yyyy-MM-dd"))
        </td>
        <th>
            <span>证书确认日期</span>
        </th>
        <td>
            @(null == Model.CertificateConfirmDate ? null : Model.CertificateConfirmDate.Value.ToString("yyyy-MM-dd"))
        </td>
    </tr>
    <tr>
        <th>
            检测结果
        </th>
        <td>
            @Model.CheckResult
        </td>
        <th>
            备注
        </th>
        <td>
            @Model.Remark
        </td>

    </tr>

    <tr>
        <th>
            创建日期
        </th>
        <td>
            @(null == Model.CreateDate ? null : Model.CreateDate.ToString("yyyy-MM-dd"))
        </td>
        <th>
            创建人
        </th>
        <td>
            @Model.CreateUser
        </td>

    </tr>
</table>
